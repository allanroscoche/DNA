\chapter{Estruturas algébricas}

\section{Grupos}

\begin{Def}
  Sendo $G$ um conjunto qualquer e $*$ uma operação sobre $G$, dizemos
  que $(G,*)$ é um \conceito{grupo} se e somente se:
  \begin{enumerate}[(i)]
    \item a operação $*$ for \Conceito{associativa}{associatividade} ---
      \begin{equation*}
        \bigl(\forall(a,b,c)\in G^3\bigr)
          \bigl(a*(b*c) = (a*b)*c\bigr)\MMpv
      \end{equation*}
    \item existir algum \conceito{elemento neutro} em $G$ para a operação
      $*$ ---
      \begin{equation*}
        (\exists e\in G)(\forall a\in G)(a*e = e*a = a)\MMpv
      \end{equation*}
    \item todo elemento de $G$ for \Conceito{simetrizável}{elemento
      simetrizável} em relação a qualquer
      elemento neutro para a operação $*$ ---
      \begin{equation*}
        \bigl(\forall e\in e(G,*)\bigr)
          (\forall a\in G)(\exists\overline{a}\in G)(
            a*\overline{a} = \overline{a}*a = e
          )\MMv
      \end{equation*}
      sendo
      \begin{equation*}
        e(G,*) = \cjpp{e\in G}{(\forall a\in G)(a*e = e*a = a)}\MMp
      \end{equation*}
  \end{enumerate}
\end{Def}

\begin{Propr}
  A existência de elemento neutro em um grupo $(G,*)$ é única.
\end{Propr}

\begin{dem}
  Sejam $e$ e $f$ elementos neutros de um grupo $(G,*)$. Queremos,
  então, demonstrar que $e=f$. Como $e$ é um elemento de $G$ e $f$ é um
  elemento neutro, temos que
  \begin{equation*}
    e = e*f = f*e\MMp
  \end{equation*}
  Como $f$ é um elemento de $G$ e $e$ é um elemento neutro, temos que
  \begin{equation*}
    f*e = f\MMp
  \end{equation*}
  Portanto, $e = f$.
\end{dem}

\begin{Propr}
  A existência de simétrico de um elemento de $G$ em relação ao
  elemento neutro do grupo $(G,*)$ é única.
\end{Propr}

\begin{dem}
  Seja $e$ o elemento neutro de um grupo $(G,*)$ e seja $a$ um elemento
  qualquer de $G$. Sejam $\overline{a}_1$ e $\overline{a}_2$ simétricos
  de $a$ em relação a $e$. Queremos mostrar que
  $\overline{a}_1 = \overline{a}_2$. Sabemos que
  \begin{equation}\label{a1EQa1barESTRe}
    \overline{a}_1 = \overline{a}_1*e
  \end{equation}
  e, já que $\overline{a}_2$ é simétrico de $a$, que
  \begin{equation}\label{eEQaESTRa2bar}
    e = a*\overline{a}_2\MMp
  \end{equation}
  Substituindo\xspace\ref{eEQaESTRa2bar} em\xspace\ref{a1EQa1barESTRe},
  temos que
  \begin{equation*}
    \overline{a}_1 = \overline{a}_1*(a*\overline{a}_2)
  \end{equation*}
  e, portanto, dos axiomas da definição de grupo, que
  \begin{equation*}
    \begin{aligned}
      \overline{a}_1 &= (\overline{a}_1*a)*\overline{a}_2\\
                     &= e*\overline{a}_2\\
                     &= \overline{a}_2\MMv
    \end{aligned}
  \end{equation*}
  como queríamos demonstrar.
\end{dem}

\begin{Propr}
  O simétrico do elemento neutro $e$ de um grupo é próprio elemento
  $e$.
\end{Propr}

\begin{dem}
  Seja $\overline{e}$ o simétrico do elemento neutro $e$ de um grupo
  $(G,*)$. Queremos mostrar que $\overline{e}=e$. Sabemos, por $e$ ser
  elemento neutro, que
  \begin{equation*}
    \overline{e} = \overline{e}*e\MMp
  \end{equation*}
  Por outro lado, por $\overline{e}$ ser o simétrico de $e$, temos que
  \begin{equation*}
    \overline{e}*e = e
  \end{equation*}
  e, portanto, que
  \begin{equation*}
    \overline{e} = e\MMv
  \end{equation*}
  como queríamos demonstrar.
\end{dem}

\begin{Propr}
  Sendo $a$ um elemento de um grupo $(G,*)$,
  \begin{equation*}
    \overline{\overline{a}} = a\MMp
  \end{equation*}
\end{Propr}

\begin{dem}
  Seja $(G,*)$ um grupo e seja $a$ um elemento de $G$. Queremos mostrar
  que $\overline{\overline{a}} = a$. Sabemos que
  \begin{equation*}
    \overline{\overline{a}} = \overline{\overline{a}}*e
  \end{equation*}
  e, como $e = \overline{a}*a$, que
  \begin{equation*}
    \overline{\overline{a}} =
      \overline{\overline{a}}*\bigl(\overline{a}*a\bigr)\MMp
  \end{equation*}
  Portanto, dos axiomas da definição de grupo, temos que
  \begin{equation*}
    \begin{aligned}
      \overline{\overline{a}}
        &= \bigl(\overline{\overline{a}}*\overline{a}\bigr)*a \\
        &= e*a \\
        &= a\MMv
    \end{aligned}
  \end{equation*}
  como queríamos demonstrar.
\end{dem}

\begin{Propr}
  Sendo $(G,*)$ um grupo e $a$ e $b$ elementos de $G$,
  \begin{equation*}
    \overline{a*b} = \overline{b}*\overline{a}\MMp
  \end{equation*}
\end{Propr}

\begin{dem}
  Seja $(G,*)$ um grupo e sejam $a$ e $b$ elementos de $G$. Queremos
  mostrar que o simétrico de $a*b$ é $\overline{b}*\overline{a}$. Para
  tanto, vamos mostrar que:
  \begin{align*}
    (a*b)*(\overline{b}*\overline{a}) = e\MMpv\tag{i}\label{psmorgi}  \\
    (\overline{b}*\overline{a})*(a*b) = e\MMp\tag{ii}\label{psmorgii} \\
  \end{align*}

  Dos axiomas da definição de grupo, temos que
  \begin{equation*}
    \begin{aligned}
      (a*b)*(\overline{b}*\overline{a})
        &= \bigl((a*b)*\overline{b}\bigr)*\overline{a} \\
        &= \bigl(a*(b*\overline{b})\bigr)*\overline{a} \\
        &= (a*e)*\overline{a} \\
        &= a*\overline{a} \\
        &= e
    \end{aligned}
  \end{equation*}
  e, portanto, mostramos (\ref{psmorgi}). Analogamente,
  \begin{equation*}
    \begin{aligned}
      (\overline{b}*\overline{a})*(a*b)
        &= \bigl((\overline{b}*\overline{a})*a\bigr)*b \\
        &= \bigl(\overline{b}*(\overline{a}*a)\bigr)*b \\
        &= (\overline{b}*e)*b \\
        &= \overline{b}*b \\
        &= e\MMv
    \end{aligned}
  \end{equation*}
  e, portanto, mostramos (\ref{psmorgii}) e concluímos a prova.
\end{dem}

\begin{Not}
  Sendo $e$ o elemento neutro de um grupo $(G,*)$, $m$ e $n$ números
  naturais e, para cada $j\in[m..n]$, $a_j$ um elemento de $G$,
  \begin{equation*}
    \bigsqcup_{j=m}^na_j = \left\{
      \begin{aligned}
        &e\MMv\quad&\text{se $m>n$;}\\
        &a_m*\biggl(\bigsqcup_{j=m+1}^na_j\biggr)
          \MMv\quad&\text{se $m\leq n$.}
      \end{aligned}
    \right.
  \end{equation*}
\end{Not}

\begin{Teo}
  Sendo $e$ o elemento neutro de um grupo $(G,*)$, $m$ e $n$ números
  naturais e, para cada $j\in[m..n]$, $a_j$ um elemento de $G$,
  \begin{equation*}
    \overline{\bigsqcup_{j=m}^na_j} =
    \bigsqcup_{j=m}^n\overline{a_{n-j+m}}\MMp
  \end{equation*}
\end{Teo}

